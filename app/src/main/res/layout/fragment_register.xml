<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/high30dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="0.8">


                        <EditText
                            android:id="@+id/et_email"
                            android:hint="E-mail"
                            android:layout_weight="0.5"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/high50dp"
                            android:layout_marginTop="@dimen/high50dp"/>

                        <EditText
                            android:id="@+id/et_password"
                            android:hint="Password"
                            android:layout_weight="0.5"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/high50dp"
                            />


                    </LinearLayout>


                    <ImageView
                        android:layout_marginTop="@dimen/high20dp"
                        android:layout_weight="0.5"
                        android:layout_gravity="center"
                        android:layout_width="@dimen/high150dp"
                        android:layout_height="@dimen/high150dp"
                        android:src="@drawable/add_profile_image"/>


                </LinearLayout>



                <LinearLayout
                    android:layout_marginTop="@dimen/high30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/et_name"
                        android:hint="ชื่อ"
                        android:layout_weight="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/high50dp"
                        />

                    <EditText
                        android:id="@+id/et_lastname"
                        android:hint="นามสกุล"
                        android:layout_weight="0.5"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/high50dp"
                        />

                </LinearLayout>


                <EditText
                    android:id="@+id/et_phone"
                    android:hint="เบอร์โทรศัพท์"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/high50dp"
                    />

                <EditText
                    android:hint="ตำแหน่ง"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <!--<android.support.v7.widget.AppCompatButton-->
                        <!--android:id="@+id/Btn_register"-->
                        <!--android:text="สมัคร"-->
                        <!--android:layout_gravity="center"-->
                        <!--android:layout_width="@dimen/high150dp"-->
                        <!--android:layout_height="@dimen/high50dp" />-->

                </LinearLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

</LinearLayout>